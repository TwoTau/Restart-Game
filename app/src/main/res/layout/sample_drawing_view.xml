<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/org.spartabots.restart"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <org.spartabots.restart.DrawingView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:background="#ccc"
        android:paddingBottom="40dp"
        android:paddingLeft="20dp"
        app:exampleColor="#33b5e5"
        app:exampleDimension="24sp"
        app:exampleDrawable="@android:drawable/ic_menu_add"
        app:exampleString="Hello, DrawingView"
        android:id="@+id/drawingView" />
    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="A"
        android:textColor="#fff"
        android:id="@+id/aButton"
        android:layout_above="@+id/bButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="B"
        android:textColor="#fff"
        android:id="@+id/bButton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/aButton"
        android:layout_toLeftOf="@+id/aButton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="↑"
        android:textSize="25dp"
        android:id="@+id/upButton"
        android:layout_above="@+id/bButton"
        android:layout_toRightOf="@+id/leftButton"
        android:layout_toEndOf="@+id/leftButton" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="←"
        android:textSize="20dp"
        android:id="@+id/leftButton"
        android:layout_below="@+id/upButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textAlignment="gravity"
        android:text="→"
        android:textSize="20dp"
        android:id="@+id/rightButton"
        android:layout_below="@+id/upButton"
        android:layout_toRightOf="@+id/upButton"
        android:layout_toEndOf="@+id/upButton" />

    <Button
        android:id="@+id/downButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/upButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/upButton"
        android:layout_below="@+id/upButton"
        android:layout_toLeftOf="@+id/rightButton"
        android:layout_toStartOf="@+id/rightButton"
        android:gravity="center"
        android:text="↓"
        android:textAlignment="gravity"
        android:textSize="20dp" />


</RelativeLayout>
